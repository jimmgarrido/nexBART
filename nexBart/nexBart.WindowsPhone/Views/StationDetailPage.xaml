            <TextBlock x:Name="StopHeader" Grid.Row="0" Foreground="#0083d3" Style="{ThemeResource HeaderTextBlockStyle}" 
                       CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" FontSize="38"/>
            
            <TextBlock Text="Departures" Margin="0 5 0 0" Style="{StaticResource LablelStyle}"/>
            
