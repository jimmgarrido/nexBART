                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                --><!--Row1 --><!--
                <Rectangle Fill="{Binding Lines[0].LineColor}" Style="{StaticResource RectangleStyle}" Grid.Row="1" Grid.Column="0" />

                <StackPanel Grid.Row="1" Grid.Column="1" DataContext="{Binding Lines[0].Destinations[0]}">
                    <TextBlock Text="{Binding Name}" Style="{StaticResource DestinationStyle}" HorizontalAlignment="Left" />
                    <TextBlock Text="{Binding Times, Converter={StaticResource StringFormat}, ConverterParameter=\{0\} mins}" Style="{StaticResource TimeStyle}" HorizontalAlignment="Left"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" DataContext="{Binding Lines[0].Destinations[1]}">
                    <TextBlock Text="{Binding Name}" Style="{StaticResource DestinationStyle}" HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding Times, Converter={StaticResource StringFormat}, ConverterParameter=\{0\} mins}" Style="{StaticResource TimeStyle}" HorizontalAlignment="Right"/>
                </StackPanel>

                --><!--Row 2--><!--
                <Rectangle Fill="{Binding Lines[1].LineColor}" Style="{StaticResource RectangleStyle}" Grid.Row="3" Grid.Column="0" />

                <StackPanel Grid.Row="3" Grid.Column="1" DataContext="{Binding Lines[1].Destinations[0]}">
                    <TextBlock Text="{Binding Name}" Style="{StaticResource DestinationStyle}" HorizontalAlignment="Left"/>
